<Window x:Class="HeyGPT.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HeyGPT Â· Voice Assistant"
        Height="800" Width="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/SqaureLog.ico"
        Background="{StaticResource TraditionalGradientBrush}"
        Loaded="Window_Loaded"
        Opacity="0">

    <Grid Margin="40,32,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Animated Logo -->
        <StackPanel x:Name="HeaderPanel" Grid.Row="0" Margin="0,0,0,32" HorizontalAlignment="Center"
                    Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
            </StackPanel.RenderTransform>

            <Border Width="160" Height="160"
                    CornerRadius="80"
                    Margin="0,0,0,16"
                    Background="White">
                <Border.Effect>
                    <DropShadowEffect Color="#507dd3c0"
                                      BlurRadius="40"
                                      ShadowDepth="0"
                                      Direction="270"/>
                </Border.Effect>
                <Ellipse Width="140" Height="140"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Logo.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <TextBlock Text="HeyGPT"
                       FontSize="36"
                       FontWeight="Light"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,4"/>

            <TextBlock Text="Voice-Activated AI Assistant"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="{StaticResource StoneBrush}"
                       HorizontalAlignment="Center"
                       Opacity="0.8"/>

            <Border x:Name="ActiveWakeWordBorder"
                    Background="{StaticResource AccentGradientBrush}"
                    CornerRadius="16"
                    Padding="16,8"
                    Margin="0,16,0,0"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="#407dd3c0" BlurRadius="12" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ¤ Listening for:"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="ActiveWakeWordText"
                               Text="jarvis"
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Status Card with Modern Design -->
        <Border x:Name="StatusCard" Grid.Row="1"
                Style="{StaticResource GlassCard}"
                Margin="0,0,0,28"
                Opacity="0">
            <Border.RenderTransform>
                <TranslateTransform Y="-30"/>
            </Border.RenderTransform>
            <StackPanel>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="14" Height="14"
                            Grid.Column="0"
                            CornerRadius="7"
                            Margin="0,0,12,0"
                            VerticalAlignment="Center">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource RetroTurquoiseColor}"/>
                        </Border.Background>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Current Status"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                </Grid>

                <TextBlock x:Name="StatusTextBlock"
                           FontSize="15"
                           Foreground="{StaticResource CharcoalBrush}"
                           TextWrapping="Wrap"
                           Margin="26,0,0,0"
                           LineHeight="24"
                           Text="Ready to listen. Click Start to activate voice detection."/>
            </StackPanel>
        </Border>

        <!-- Activity Log with Modern Card -->
        <Border x:Name="ActivityLogCard" Grid.Row="2"
                Style="{StaticResource GlassCard}"
                Margin="0,0,0,28"
                Opacity="0">
            <Border.RenderTransform>
                <TranslateTransform Y="-30"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="18" Height="18"
                             Grid.Column="0"
                             Fill="{StaticResource AccentBrush}"
                             Margin="0,0,12,0"
                             VerticalAlignment="Center"
                             Opacity="0.8"/>

                    <TextBlock Grid.Column="1"
                               Text="Activity Log"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                </Grid>

                <Border Grid.Row="1"
                        Background="#F0F4F8"
                        CornerRadius="12"
                        Padding="20"
                        BorderBrush="{StaticResource SecondaryBrush}"
                        BorderThickness="2"
                        MinHeight="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="240">
                        <TextBlock x:Name="LogTextBlock"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   Foreground="#2d2d2d"
                                   TextWrapping="Wrap"
                                   LineHeight="20"
                                   Text=""/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Modern Action Buttons with Gradient -->
        <StackPanel x:Name="ActionButtonsPanel" Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24"
                    Opacity="0">
            <StackPanel.RenderTransform>
                <TranslateTransform Y="30"/>
            </StackPanel.RenderTransform>

            <Button x:Name="StartButton"
                    Style="{StaticResource AccentButton}"
                    Click="StartButton_Click"
                    Width="220"
                    Padding="28,18">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="12" Height="12"
                             Fill="White"
                             Margin="0,0,12,0"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="Start Listening"
                               FontSize="15"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="StopButton"
                    Style="{StaticResource SecondaryButton}"
                    Click="StopButton_Click"
                    Width="220"
                    Padding="28,18"
                    IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="12" Height="12"
                               Fill="White"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               RadiusX="2"
                               RadiusY="2"/>
                    <TextBlock Text="Stop Listening"
                               FontSize="15"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Bottom Navigation with Modern Design -->
        <Grid x:Name="BottomButtonsPanel" Grid.Row="4"
              Opacity="0">
            <Grid.RenderTransform>
                <TranslateTransform Y="30"/>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SettingsButton"
                    Grid.Column="0"
                    Style="{StaticResource TraditionalButton}"
                    Click="SettingsButton_Click"
                    Margin="0,0,6,0"
                    Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse Width="8" Height="8"
                             Fill="{StaticResource SecondaryBrush}"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="Settings"
                               FontSize="14"
                               FontWeight="Medium"/>
                </StackPanel>
            </Button>

            <Button x:Name="TestButton"
                    Grid.Column="1"
                    Style="{StaticResource TraditionalButton}"
                    Click="TestButton_Click"
                    Margin="6,0,6,0"
                    Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse Width="8" Height="8"
                             Fill="{StaticResource GoldBrush}"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="Test"
                               FontSize="14"
                               FontWeight="Medium"/>
                </StackPanel>
            </Button>

            <Button x:Name="UserGuideButton"
                    Grid.Column="2"
                    Style="{StaticResource TraditionalButton}"
                    Click="UserGuideButton_Click"
                    Margin="6,0,0,0"
                    Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse Width="8" Height="8"
                             Fill="{StaticResource AccentBrush}"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="Guide"
                               FontSize="14"
                               FontWeight="Medium"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>

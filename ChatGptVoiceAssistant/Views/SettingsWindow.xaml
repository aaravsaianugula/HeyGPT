<Window x:Class="HeyGPT.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings · 設定 · 설정"
        Height="720" Width="680"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource TraditionalGradientBrush}"
        Loaded="Window_Loaded"
        Opacity="0">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40,32,40,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="環境設定"
                           FontSize="16"
                           FontWeight="Light"
                           Foreground="{StaticResource StoneBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           Opacity="0.6"/>

                <TextBlock Style="{StaticResource HeaderText}"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12">
                    <Run Text="Configuration" Foreground="{StaticResource PrimaryBrush}"/>
                    <Run Text="Settings" Foreground="{StaticResource TextPrimaryBrush}"/>
                </TextBlock>

                <Border Height="2"
                        Width="100"
                        Background="{StaticResource AccentBrush}"
                        CornerRadius="1"
                        Opacity="0.7"/>

                <TextBlock Text="Configure your voice assistant with traditional elegance"
                           Style="{StaticResource CaptionText}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"
                           FontSize="12"/>
            </StackPanel>

            <!-- Settings Content -->
            <StackPanel Grid.Row="1">
                <!-- Wake Word Configuration -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="🎤 Wake Word · 起動ワード"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Custom Wake Word"
                                   FontSize="13"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="WakeWordTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding WakeWord, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Speech Confidence Threshold"
                                   FontSize="13"
                                   Margin="0,12,0,8"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="ConfidenceSlider"
                                    Grid.Column="0"
                                    Style="{StaticResource TraditionalSlider}"
                                    Value="{Binding ConfidenceThreshold}"
                                    Minimum="0.0"
                                    Maximum="1.0"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,16,0"/>

                            <Border Grid.Column="1"
                                    Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    MinWidth="50">
                                <TextBlock Text="{Binding ConfidenceThreshold, StringFormat='{}{0:F1}'}"
                                           Foreground="{StaticResource SurfaceBrush}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Higher values require clearer speech recognition · より高い値でクリアな認識"
                                   TextWrapping="Wrap"/>

                        <Border Height="1"
                                Background="{StaticResource MistBrush}"
                                Margin="0,16,0,16"/>

                        <!-- System.Speech Advanced Settings (Fallback Only) -->
                        <Border Background="{StaticResource MistBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,12">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource StoneBrush}">
                                <Run Text="ℹ️ These settings only apply when using System.Speech (fallback mode)." FontWeight="SemiBold"/>
                                <LineBreak/>
                                <Run Text="If you have Porcupine AccessKey, these are ignored." FontSize="10"/>
                            </TextBlock>
                        </Border>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Advanced Wake Word Isolation"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <CheckBox x:Name="EnableIsolationCheckBox"
                                  IsChecked="{Binding EnableWakeWordIsolation}"
                                  Content="Enable Isolation (Prevents false positives)"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  FontSize="13"
                                  Margin="0,0,0,12"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="🛡️ Isolation ensures the wake word is spoken alone, not within another sentence"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>

                        <!-- Silence Threshold -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Silence Threshold (Audio Level)"
                                   FontSize="13"
                                   Margin="0,8,0,8"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="SilenceThresholdSlider"
                                    Grid.Column="0"
                                    Style="{StaticResource TraditionalSlider}"
                                    Value="{Binding SilenceThreshold}"
                                    Minimum="0"
                                    Maximum="30"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,16,0"/>

                            <Border Grid.Column="1"
                                    Background="{StaticResource SecondaryBrush}"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    MinWidth="50">
                                <TextBlock Text="{Binding SilenceThreshold}"
                                           Foreground="{StaticResource SurfaceBrush}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Audio levels below this value are considered silence (0-100 scale)"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>

                        <!-- Minimum Silence Duration -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Minimum Silence Duration (ms)"
                                   FontSize="13"
                                   Margin="0,8,0,4"/>
                        <TextBox x:Name="MinSilenceDurationTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding MinimumSilenceDurationMs, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Minimum silence required before wake word (recommended: 500-1500ms)"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>

                        <!-- Cooldown Period -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Cooldown Period (ms)"
                                   FontSize="13"
                                   Margin="0,8,0,4"/>
                        <TextBox x:Name="CooldownPeriodTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding CooldownPeriodMs, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Minimum time between wake word activations (recommended: 2000-5000ms)"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- Porcupine AI Wake Word Engine (Recommended) -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="🎯 Porcupine AI Wake Word Engine (Recommended)"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <Border Background="{StaticResource SecondaryBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16"
                                Opacity="0.2">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource CharcoalBrush}">
                                <Run Text="✨ 97%+ accuracy, &lt;1 false positive per 10 hours" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="Simply enter your AccessKey below to enable high accuracy wake word detection. No complex settings needed!" FontSize="11"/>
                            </TextBlock>
                        </Border>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Picovoice AccessKey (Required)"
                                   FontSize="13"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="PicovoiceAccessKeyTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding PicovoiceAccessKey, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 FontSize="11"/>

                        <Border Background="{StaticResource MistBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,8,0,16">
                            <TextBlock Style="{StaticResource CaptionText}" TextWrapping="Wrap">
                                <Run Text="🔑 Get your FREE AccessKey: " FontWeight="Bold"/>
                                <Hyperlink NavigateUri="https://console.picovoice.ai" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="console.picovoice.ai"/>
                                </Hyperlink>
                                <LineBreak/>
                                <Run Text="Free for personal use, no credit card required. Sign up takes 30 seconds." FontSize="10"/>
                            </TextBlock>
                        </Border>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Detection Sensitivity"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="PorcupineSensitivitySlider"
                                    Grid.Column="0"
                                    Style="{StaticResource TraditionalSlider}"
                                    Value="{Binding PorcupineSensitivity}"
                                    Minimum="0.0"
                                    Maximum="1.0"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,16,0"/>

                            <Border Grid.Column="1"
                                    Background="{StaticResource SecondaryBrush}"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    MinWidth="50">
                                <TextBlock Text="{Binding PorcupineSensitivity, StringFormat='{}{0:F1}'}"
                                           Foreground="{StaticResource SurfaceBrush}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Higher = more sensitive (may increase false positives), Lower = less sensitive (may miss wake word). Default: 0.5"
                                   TextWrapping="Wrap"/>

                        <Border Height="1"
                                Background="{StaticResource MistBrush}"
                                Margin="0,20,0,16"/>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Custom Wake Word (.ppn file)"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,12"
                                Opacity="0.15">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource CharcoalBrush}">
                                <Run Text="🎨 Want a custom wake word?" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="You can create custom wake words at " FontSize="10"/>
                                <Hyperlink NavigateUri="https://console.picovoice.ai" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Picovoice Console" FontSize="10"/>
                                </Hyperlink>
                                <Run Text=" and upload the .ppn file here." FontSize="10"/>
                            </TextBlock>
                        </Border>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="CustomWakeWordPathTextBox"
                                     Grid.Column="0"
                                     Style="{StaticResource TraditionalTextBox}"
                                     Text="{Binding CustomWakeWordPath, Mode=TwoWay}"
                                     IsReadOnly="True"
                                     Margin="0,0,8,0"
                                     FontFamily="Consolas"
                                     FontSize="10"/>

                            <Button x:Name="BrowseCustomWakeWordButton"
                                    Grid.Column="1"
                                    Style="{StaticResource SecondaryButton}"
                                    Content="Browse..."
                                    Click="BrowseCustomWakeWord_Click"
                                    Padding="16,8"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Button x:Name="ClearCustomWakeWordButton"
                                    Content="Clear Custom Wake Word"
                                    Click="ClearCustomWakeWord_Click"
                                    Padding="12,6"
                                    FontSize="11"
                                    Background="{StaticResource MistBrush}"
                                    Foreground="{StaticResource CharcoalBrush}"
                                    BorderBrush="{StaticResource StoneBrush}"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="If a custom wake word is set, it will be used instead of the built-in wake word above."
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Monitor Selection -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="🖥 Monitor Selection · モニター選択"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Target Monitor"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource SecondaryBrush}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="MonitorInfoTextBlock"
                                           Text="{Binding MonitorInfo}"
                                           Style="{StaticResource BodyText}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="CaptureMonitorButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Configure Monitor (10s countdown)"
                                Click="CaptureMonitorButton_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border x:Name="CountdownTextBlock"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="16,12"
                                Visibility="Collapsed">
                            <TextBlock Text=""
                                       Foreground="{StaticResource SurfaceBrush}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border Background="{StaticResource MistBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       Text="📍 Instructions: Click button, move mouse to center of desired monitor within 10 seconds"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource CharcoalBrush}"
                                       Margin="0"/>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- ChatGPT Application -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="💬 ChatGPT Application · アプリケーション"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Application Path or Command"
                                   FontSize="13"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="ChatGptPathTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding ChatGptAppPath, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="💡 Tip: Just type 'chatgpt' if it's installed in your PATH. Or provide full path to .exe"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Button Click Delay (milliseconds)"
                                   FontSize="13"
                                   Margin="0,8,0,4"/>
                        <TextBox x:Name="ClickDelayTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding ButtonClickDelay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="Delay between automation actions to ensure UI elements are ready"
                                   TextWrapping="Wrap"/>

                        <Border Height="1"
                                Background="{StaticResource MistBrush}"
                                Margin="0,16,0,16"/>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="New Chat Button Text"
                                   FontSize="13"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="NewChatButtonTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding NewChatButtonText, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Voice Mode Button Text"
                                   FontSize="13"
                                   Margin="0,8,0,4"/>
                        <TextBox x:Name="VoiceModeButtonTextBox"
                                 Style="{StaticResource TraditionalTextBox}"
                                 Text="{Binding VoiceModeButtonText, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Style="{StaticResource CaptionText}"
                                   Text="⚠️ Enter the exact text shown on the buttons in your ChatGPT app (e.g., 'New chat', 'Voice mode', etc.)"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- Button Position Configuration -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="🎯 Button Positions · ボタン位置"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <!-- New Chat Button Position -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="New Chat Button Position"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource SecondaryBrush}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding NewChatButtonInfo}"
                                           Style="{StaticResource BodyText}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="CaptureNewChatButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Capture New Chat Button (10s countdown)"
                                Click="CaptureNewChatButton_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border x:Name="NewChatCountdownTextBlock"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="16,12"
                                Visibility="Collapsed">
                            <TextBlock Text=""
                                       Foreground="{StaticResource SurfaceBrush}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border Height="1"
                                Background="{StaticResource MistBrush}"
                                Margin="0,8,0,24"/>

                        <!-- Voice Mode Button Position -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Voice Mode Button Position"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource SecondaryBrush}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding VoiceModeButtonInfo}"
                                           Style="{StaticResource BodyText}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="CaptureVoiceModeButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Capture Voice Mode Button (10s countdown)"
                                Click="CaptureVoiceModeButton_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border x:Name="VoiceModeCountdownTextBlock"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="16,12"
                                Visibility="Collapsed">
                            <TextBlock Text=""
                                       Foreground="{StaticResource SurfaceBrush}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border Background="{StaticResource MistBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       Text="📍 Instructions: Click button, hover mouse over the button you want to click, wait 10 seconds"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource CharcoalBrush}"
                                       Margin="0"/>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- Voice Command Button Positions -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="🎙 Voice Command Buttons · 音声コマンドボタン"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <!-- Mic Button Position -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Mic Button Position"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource SecondaryBrush}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding MicButtonInfo}"
                                           Style="{StaticResource BodyText}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="CaptureMicButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Capture Mic Button (10s countdown)"
                                Click="CaptureMicButton_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border x:Name="MicCountdownTextBlock"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="16,12"
                                Visibility="Collapsed">
                            <TextBlock Text=""
                                       Foreground="{StaticResource SurfaceBrush}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border Height="1"
                                Background="{StaticResource MistBrush}"
                                Margin="0,8,0,24"/>

                        <!-- Exit Voice Mode Button Position -->
                        <TextBlock Style="{StaticResource SubheaderText}"
                                   Text="Exit Voice Mode Button Position"
                                   FontSize="13"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource SecondaryBrush}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ExitVoiceModeButtonInfo}"
                                           Style="{StaticResource BodyText}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="CaptureExitVoiceModeButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Capture Exit Voice Mode Button (10s countdown)"
                                Click="CaptureExitVoiceModeButton_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,16"/>

                        <Border x:Name="ExitVoiceModeCountdownTextBlock"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="16,12"
                                Visibility="Collapsed">
                            <TextBlock Text=""
                                       Foreground="{StaticResource SurfaceBrush}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Border Background="{StaticResource MistBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <TextBlock Style="{StaticResource CaptionText}"
                                       Text="📍 Voice Commands: Say 'mic on/off' to toggle mic, 'exit' to exit voice mode (ONLY works when ChatGPT is in voice mode)"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource CharcoalBrush}"
                                       Margin="0"/>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- Application Settings -->
                <GroupBox Style="{StaticResource TraditionalGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="⚙ Application Settings · アプリ設定"/>
                    </GroupBox.Header>

                    <StackPanel>
                        <CheckBox x:Name="StartWithWindowsCheckBox"
                                  IsChecked="{Binding StartWithWindows, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,16">
                            <CheckBox.Content>
                                <StackPanel>
                                    <TextBlock Text="Start with Windows"
                                               Style="{StaticResource SubheaderText}"
                                               FontSize="13"
                                               Margin="0"/>
                                    <TextBlock Text="Automatically launch HeyGPT when Windows starts"
                                               Style="{StaticResource CaptionText}"
                                               Margin="0,4,0,0"
                                               FontSize="11"/>
                                </StackPanel>
                            </CheckBox.Content>
                        </CheckBox>

                        <CheckBox x:Name="StartMinimizedCheckBox"
                                  IsChecked="{Binding StartMinimized, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,0">
                            <CheckBox.Content>
                                <StackPanel>
                                    <TextBlock Text="Start minimized to system tray"
                                               Style="{StaticResource SubheaderText}"
                                               FontSize="13"
                                               Margin="0"/>
                                    <TextBlock Text="Application will start in the background and minimize to system tray"
                                               Style="{StaticResource CaptionText}"
                                               Margin="0,4,0,0"
                                               FontSize="11"/>
                                </StackPanel>
                            </CheckBox.Content>
                        </CheckBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="SaveButton"
                        Grid.Column="0"
                        Style="{StaticResource AccentButton}"
                        Click="SaveButton_Click"
                        Margin="0,0,8,0"
                        Padding="32,16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✓"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Save Settings"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button x:Name="CancelButton"
                        Grid.Column="1"
                        Style="{StaticResource TraditionalButton}"
                        Click="CancelButton_Click"
                        Margin="8,0,0,0"
                        Padding="32,16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✕"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Cancel"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
